<div class="content-wrapper">
    <h1 class="mb-4 text-center"> CUSTOMER LIST</h1>
    <div class="row">
        <div class="col-12">
            <div class="table-responsive customer-table">
                <table class="display expandable-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Number</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each customer }}
                        {{#if this.status}}
                        <tr class="danger">
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.number}}</td>
                            <td><a href="/customer/{{this._id}}/edit">Ban</a>
                            </td>
                        </tr>
                        {{else}}
                        <tr class="info">
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.number}}</td>
                            <td><a href="/customer/{{this._id}}/edit">Unban</a>
                            </td>
                        </tr>
                        {{/if}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>