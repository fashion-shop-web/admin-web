<div class="content-wrapper">
    <h1 class="mb-4 text-center"> ADMIN LIST</h1>
    <div class="row">
        <div class="col-12 mt-4">
            <div class="table-responsive customer-table">
                <table class="display expandable-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Number</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each admin}}
                        <tr>
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.number}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="list-current-page" hidden name={{currentPage}}></div>
        {{!-- pagination --}}
        <div class="mt-5 col-12 d-flex justify-content-center list-pagination">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {{#each pages}}
                    <li class="page-item" name={{this}}><a class="page-link" href="?page={{this}}">{{this}}</a></li>
                    {{/each}}

                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>