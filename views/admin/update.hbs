<div class="content-wrapper">
    <h1 class="text-center">UPDATE INFORMATION</h1>
    <form class="pt-3 mt-5 p-5" action='/admin/update/{{user._id}}' method="POST">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>First name</label>
                    <input type="text" class="form-control form-control-lg" name="firstName" placeholder="First name"
                        required value="{{user.firstName}}">
                </div>
            </div>

            <div class="col-6">
                <label>Last name</label>
                <div class="form-group">
                    <input type="text" class="form-control form-control-lg" name="lastName" placeholder="Last name"
                        required value="{{user.lastName}}">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control form-control-lg" name="email" placeholder="Email" required
                value={{user.email}}>
        </div>
        <div class="form-group">
            <label>Number</label>
            <input type="tel" class="form-control form-control-lg" name="number" placeholder="Number" required
                value={{user.number}}>
        </div>
        <div class="form-group mb-5">
            <label>Address</label>
            <input type="text" class="form-control form-control-lg" name="address" placeholder="Address" required
                value="{{user.address}}">
        </div>
        {{#if message}}
        <div class="text-right mt-5" style="color: red;">Email has been used</div>
        {{/if}}
        <div class="mt-1">
            <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                value="UPDATE"></input>
        </div>
    </form>
</div>