<div class="content-wrapper">
    <h1 class="text-center">CREATE NEW ADMIN ACCOUNT</h1>
    <form class="pt-3 mt-5 p-5" action='/admin/create' method="POST">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <input type="text" class="form-control form-control-lg" name="firstName" placeholder="First name"
                        required>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <input type="text" class="form-control form-control-lg" name="lastName" placeholder="Last name"
                        required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="email" class="form-control form-control-lg" name="email" placeholder="Email" required>
        </div>
        <div class="form-group">
            <input type="tel" class="form-control form-control-lg" name="number" placeholder="Number" required>
        </div>
        <div class="form-group">
            <input type="text" class="form-control form-control-lg" name="address" placeholder="Address" required>
        </div>
        <div class="form-group mb-5">
            <input type="password" class="form-control form-control-lg" name="password" placeholder="Password" required>
        </div>
        {{#if message}}
        <div class="mb-2 text-right" id="valid-text" style="color: red;">{{message}}</div>
        {{/if}}

        {{#if success}}
        <div class="mb-2 text-right" id="valid-text" style="color: rgb(6, 87, 6);">{{success}}</div>
        {{/if}}
        <div class="mt">
            <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                value="CREATE"></input>
        </div>
    </form>
</div>